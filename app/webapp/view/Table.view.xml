<mvc:View controllerName="sap.ui.inventory.controller.Table" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Table items="{
		path:'/FT_INVENTORY',
		sorter : {
            path : 'prd_id' 
         }
		}" 
	id="inventoryTable" class="inventoryTable">
        <headerToolbar>
            <Toolbar>
                <Title text="Inventory Details" level="H2" />
                <ToolbarSpacer />
                <SearchField id="searchField" search=".onSearchEmployeesTable" width="50%" />
                <Button icon="sap-icon://sort" press=".onSortButtonPressed" />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Product ID" class="headColor" />
            </Column>
            <Column demandPopin="true">
                <Text text="Product Name" class="headColor" />
            </Column>
            <Column demandPopin="true">
                <Text text="Product Category" class="headColor" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Added On" class="headColor" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Expiry Date" class="headColor" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Net Quantity" class="headColor" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Unit of Measure" class="headColor" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Stocks" class="headColor" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Unit" class="headColor" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{prd_id}" />
                    <Text text="{prd_name}" />
                    <Text text="{prd_cat}" />
                    <Text text="{added_on}" />
                    <Text text="{exp_date}" />
                    <Text text="{qty}" />
                    <Text text="{uom}" />
                    <Text text="{stocks}" />
                    <Text text="{st_unit}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
