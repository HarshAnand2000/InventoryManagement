<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
    
	<Table items="{inventory>/Inventory}" 
    id="inventoryTable"
    class="inventoryTable">
		<columns>
			<Column id="employeeIDCol"><Text text="Produc ID" class="headColor"/></Column>
			<Column id="firstNameCol" demandPopin="true"><Text text="Product Name" class="headColor"/></Column>
			<Column id="lastNameCol" demandPopin="true"><Text text="Product Category" class="headColor"/></Column>
			<Column id="addressCol" minScreenWidth="Tablet" demandPopin="true"><Text text="Added On" class="headColor"/></Column>
			<Column id="cityCol" minScreenWidth="Tablet" demandPopin="true"><Text text="Expiry Date" class="headColor"/></Column>
            <Column id="statusCol" minScreenWidth="Tablet" demandPopin="true"><Text text="Net Quantity" class="headColor"/></Column>
			<Column id="uom" minScreenWidth="Tablet" demandPopin="true" ><Text text="Unit of Measure" class="headColor"/></Column>
			<Column id="stocks" minScreenWidth="Tablet" demandPopin="true" ><Text text="Stocks" class="headColor"/></Column>
			<Column id="unit" minScreenWidth="Tablet" demandPopin="true" ><Text text="Unit" class="headColor"/></Column>
		</columns>
        <items>
			<ColumnListItem>
				<cells>
					<Text text="{inventory>prd_id}"/>
					<Text text="{inventory>prd_name}"/>
					<Text text="{inventory>prd_cat}"/>
					<Text text="{inventory>added_on}"/>
					<Text text="{inventory>exp_date}"/>
                    <Text text="{inventory>qty}"/>
					<Text text="{inventory>uom}"/>
					<Text text="{inventory>stocks}"/>
					<Text text="{inventory>st_unit}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>
