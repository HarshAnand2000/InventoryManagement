<mvc:View 
    controllerName="sap.ui.inventory.controller.LogInPanel" 
    xmlns="sap.m" xmlns:l="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:mvc="sap.ui.core.mvc">
    <Panel class="sapUiResponsiveMargin" width="auto">
        <FlexBox justifyContent="Center" alignItems="Center" width="auto">
            <Image src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a0/Wipro_Primary_Logo_Color_RGB.svg/440px-Wipro_Primary_Logo_Color_RGB.svg.png" width="150px" />
            <FormattedText htmlText="Inventory Management Solution" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText" />
        </FlexBox>
        <form:SimpleForm editable="true">
            <VBox justifyContent="Center" alignItems="Center">
                <FlexBox width="480px" height="80px" alignItems="Center" justifyContent="SpaceBetween">
                    <Label text="Username:*" design="Bold"/>
                    <Input id="user_input" placeholder="Enter your username" valueLiveUpdate="true" class="sapThemeBrand-asBackgroundColor" width="400px" />
                </FlexBox>
                <FlexBox width="480px" height="80px" alignItems="Center" justifyContent="SpaceBetween">
                    <Label text="Password:*" design="Bold"/>
                    <Input type="Password" id="pass_input" placeholder="Enter your password" valueLiveUpdate="true" width="400px" />
                </FlexBox>
                <FlexBox height="120px" alignItems="Center" justifyContent="Center">
                    <Button width="150px" type="Emphasized" text="Log in" press=".onLogIn" />
                </FlexBox>
            </VBox>
        </form:SimpleForm>
    </Panel>
</mvc:View>
