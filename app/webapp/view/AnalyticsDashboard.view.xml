<mvc:View
	controllerName="sap.ui.inventory.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
    <App >
	<Page
		title="Analytics Dashboard">
		<HBox justifyContent="SpaceBetween" class="myNav" height="60px">
            <FlexBox justifyContent="Center" alignItems="Center" width="auto">
                <Image src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a0/Wipro_Primary_Logo_Color_RGB.svg/440px-Wipro_Primary_Logo_Color_RGB.svg.png" 
                       width="50px" 
                       class="sapUiSmallMargin"/>
                <FormattedText htmlText="Inventory Management Solution" class="sapUiSmallMargin myCustomText" />
            </FlexBox>
            <FlexBox alignItems="Center">
                <Button text="Home" width="auto" type="Emphasized" class="sapUiSmallMargin" press=".onHome"/>
                <Button text="Add Product Master" width="auto" type="Emphasized" class="sapUiSmallMargin" press=".onAddProductMaster"/>
                <Button text="Add Product Inventory" width="auto" type="Emphasized" class="sapUiSmallMargin" press=".onAddProductInventory"/>
            </FlexBox>
        </HBox>
	</Page>
    </App>
</mvc:View>